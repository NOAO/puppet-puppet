[main]
vardir = /var/lib/puppet
logdir = /var/log/puppet
rundir = /var/run/puppet
ssldir = $vardir/ssl
pluginsync = true
splay = true

pluginsource = puppet://$server/plugins
environments = production

[agent]
splay = true
report = true
ignoreschedules = true
daemon = false
certname = <%= fqdn %>
environment = production
server = <%= servername %>
listen = true
configtimeout = 900
